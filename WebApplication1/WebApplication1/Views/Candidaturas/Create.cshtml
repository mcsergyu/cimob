@model Cimob.Models.Candidatura

@{
    ViewData["Title"] = "Submeter candidatura";
}

<h2>Submeter candidatura</h2>

<h4>Selecione programa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProgramId" class="control-label"></label>
                <select asp-for="ProgramId" class ="form-control" asp-items="ViewBag.ProgramId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Submeter" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista de candidaturas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
