@model IEnumerable<Cimob.Models.Candidatura>

@{
    ViewData["Title"] = "Candidaturas";
}

<h2>Candidaturas do utilizador &nbsp;<a href="#" data-toggle="tooltip" data-placement="bottom" title="Lista de Candidaturas feitas pelo utilizador."><i class="fa fa-question-circle" aria-hidden="true"></i></a></h2>

<p>
    <a asp-action="Create">Submeter candidatura</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppliedProgram)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastStateDate)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppliedProgram.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastStateDate)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.CandidaturaId">Edit</a> |*@
                <a asp-action="Details" asp-route-id="@item.CandidaturaId">Detalhes</a> @*|
                <a asp-action="Delete" asp-route-id="@item.CandidaturaId">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
