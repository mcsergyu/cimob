@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Create a new account. <a href="#" data-placement="bottom" data-toggle="tooltip" title="Preencher o Formulário para adicionar uma nova conta."><i class="fa fa-question-circle" aria-hidden="true"></i></a></h4>

            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="QuestionID" class="form-control">
                 @foreach (Question question in ViewBag.Question)
                 {
                    <option value=@question.ID>@question.Description</option>
                 }
                </select>
                <span asp-validation-for="QuestionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anwser"></label>
                <input asp-for="Anwser" class="form-control" />
                <span asp-validation-for="Anwser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfilyTypeID"></label>
                <select asp-for="ProfilyTypeID" class="form-control">
                     @foreach (ProfileType profile in ViewBag.ProfileType)
                {
                    <option value=@profile.ID>@profile.Description</option>
                }
                </select>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
