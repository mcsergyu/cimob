@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h2>@ViewData["Title"]</h2>
<h4>Reset your password.<a href="#" data-placement="bottom" data-toggle="tooltip" title="Preencher  formulário, para que  seja enviado um email com o resto da informação para alterar a password."><i class="fa fa-question-circle" aria-hidden="true"></i></a></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="QuestionID" class="form-control">
                    @foreach (Question question in ViewBag.Question)
                    {
                        <option value=@question.ID>@question.Description</option>
                    }
                </select>
                <span asp-validation-for="QuestionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anwser"></label>
                <input asp-for="Anwser" class="form-control" />
                <span asp-validation-for="Anwser" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
