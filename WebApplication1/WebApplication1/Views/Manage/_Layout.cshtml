@{ 
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Manage your account</h2>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <div class="box box-primary">
                <div class="box-body">
                    @*<form enctype="multipart/form-data" asp-action="Index" method="get">*@
                    <div class="form-group">
                        <img class="img-responsive img-circle" src="~/images/avatar.png" alt="User profile picture" />
                    </div>
                    <div class="form-group">
                        <h3>@ViewBag.user.Name</h3>
                    </div>
                    <div class="form-group">
                        <h4>@ViewBag.user.ProfileType.Description</h4>
                    </div>
                    @*</form>*@


                    @*<p class="text-muted text-center">@Model.</p>*@
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="col-md-12">
                @await Html.PartialAsync("_ManageNav")
            </div>
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>
        
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
        
